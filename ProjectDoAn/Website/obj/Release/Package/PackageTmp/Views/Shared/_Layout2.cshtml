            <div class="collapse navbar-collapse d-flex justify-content-center" id="navcol-1">

                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link active text-uppercase nav-font nav-home" style="font-family:'Source Sans Pro', sans-serif;" href="/Home/Index">ShoesShop </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-uppercase nav-font" style="font-family:'Source Sans Pro', sans-serif;" href="/ListProduct/Index">Sản phẩm </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="dropdown-toggle nav-link text-uppercase nav-font" aria-expanded="false" data-toggle="dropdown" style="font-family:'Source Sans Pro', sans-serif;">Thương hiệu </a>
                        <div class="dropdown-menu">
                            @foreach (var item in new Website.Controllers.HomeController().ListBrand())
                            {
                                <a class="dropdown-item text-uppercase" style="font-family:'Source Sans Pro', sans-serif;" href="/ListProduct/Index?brand=@item.Id">@item.Name</a>}
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-uppercase nav-font" style="font-family:'Source Sans Pro', sans-serif;" href="/ListProduct/Index?sex=@LibData.Configuration.ViewConfig.MALE_INT">Nam </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-uppercase nav-font" style="font-family:'Source Sans Pro', sans-serif;" href="/ListProduct/Index?sex=@LibData.Configuration.ViewConfig.FEMALE_INT">Nữ </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-uppercase nav-font" style="font-family:'Source Sans Pro', sans-serif;" href="#contact">Liên hệ </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-uppercase nav-font d-inline" style="font-family:'Source Sans Pro', sans-serif;" href="/Cart/Index" title="Giỏ hàng"><i class="fa fa-shopping-cart"></i> </a>
                        |
                        <a class="nav-link text-uppercase nav-font d-inline" style="font-family:'Source Sans Pro', sans-serif;" href="/Cart/OrderList" title="Đơn hàng đã đặt"><i class="fa fa-file"></i> </a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid" style="min-height:600px">
        <style>
            .hover-title:hover {
                color: #78e08f !important;
