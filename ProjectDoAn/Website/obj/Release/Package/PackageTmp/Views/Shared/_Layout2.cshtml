            }

            .pagination.active a {
                background-color: #78e08f !important;
                border-color: #78e08f !important;
            }

            .pagination a:hover {
                color: #78e08f !important;
            }

            .pagination.active a:hover {
                background-color: #78e08f !important;
                border-color: #78e08f !important;
                color: #fff !important;
            }

            .nav-link.nav-font.nav-home {
                font-weight: 600 !important;
                font-size: 20px !important;
            }

            .nav-link.nav-font.nav-font {
                font-size: 18px !important;
            }
        </style>

        @RenderBody()
    </div>


